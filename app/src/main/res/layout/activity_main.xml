<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.leo.simplearcloader.SimpleArcLoader
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/simple_arc"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:arc_style="complete_arc"
        app:arc_speed="medium"
        app:arc_margin="3dp">
    </com.leo.simplearcloader.SimpleArcLoader>
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">   //Main Card View
        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/cardbackcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="top"
                            android:id="@+id/confirm_case_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cofirm Cases:"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/confirm_case_Result_tv"
                            android:gravity="bottom"
                            android:layout_below="@id/confirm_case_tv"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textSize="22dp"/>
                        <ImageView
                            android:layout_toEndOf="@id/confirm_case_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_directions_bike_blue_24dp">
                        </ImageView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>//card 1
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/cardbackcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="top"
                            android:id="@+id/TotalDead_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TotalDead :"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/TotalDead_Result_tv"
                            android:gravity="bottom"
                            android:layout_below="@id/TotalDead_tv"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textSize="22dp"/>
                        <ImageView
                            android:layout_toEndOf="@id/TotalDead_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_directions_bike_red_24dp">
                        </ImageView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>//card 2
            </LinearLayout>// Linear Layout 1
            <LinearLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/cardbackcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="top"
                            android:id="@+id/Recover_cases_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recover Cases:"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/Recover_Result_tv"
                            android:gravity="bottom"
                            android:layout_below="@id/Recover_cases_tv"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textSize="22dp"/>
                        <ImageView
                            android:layout_toEndOf="@id/Recover_cases_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_directions_bike_yellow_24dp">
                        </ImageView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>//card 1
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/cardbackcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:padding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="top"
                            android:id="@+id/TodayCases_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TodayCases :"
                            android:textSize="15dp"/>
                        <TextView
                            android:id="@+id/Today_case_Result_tv"
                            android:gravity="bottom"
                            android:layout_below="@id/TodayCases_tv"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textSize="22dp"/>
                        <ImageView
                            android:layout_toEndOf="@id/TodayCases_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_directions_bike_orange_24dp">
                        </ImageView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>//card 2

            </LinearLayout>// Linear Layout 1

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <org.eazegraph.lib.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="200dp"
        android:padding="8dp"
        app:egLegendTextSize="18sp">
    </org.eazegraph.lib.charts.PieChart>
    <TextView
        android:id="@+id/tvCases"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/piechart"
        android:layout_marginLeft="140dp"
        android:drawableLeft="@drawable/ic_directions_bike_blue_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   Total Cases">
    </TextView>
    <TextView
        android:id="@+id/tvRecover"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvCases"
        android:layout_marginLeft="140dp"
        android:drawableLeft="@drawable/ic_directions_bike_yellow_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   Recover Cases">
    </TextView>
    <TextView
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvRecover"
        android:layout_marginLeft="140dp"
        android:drawableLeft="@drawable/ic_directions_bike_red_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    Total Death">
    </TextView>
</RelativeLayout>